<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Aktion</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <switchableControllerActions>
                        <TCEforms>
                            <label>Anzeigeaktion wählen</label>
                            <config>
                                <type>select</type>
                                <items>
                                    <numIndex index="0">
                                        <numIndex index="0">Predigt</numIndex>
                                        <numIndex index="1">Sermon->show;Sermon->list</numIndex>
                                    </numIndex>
                                    <numIndex index="1">
                                        <numIndex index="0">Neueste Predigt</numIndex>
                                        <numIndex index="1">Sermon->showLatest</numIndex>
                                    </numIndex>
                                    <numIndex index="2">
                                        <numIndex index="0">Vorschau auf nächste Predigt</numIndex>
                                        <numIndex index="1">Sermon->previewNext</numIndex>
                                    </numIndex>
                                    <numIndex index="3">
                                        <numIndex index="0">Predigtreihe</numIndex>
                                        <numIndex index="1">Series->show;Series->list</numIndex>
                                    </numIndex>
                                    <numIndex index="4">
                                        <numIndex index="0">Prediger</numIndex>
                                        <numIndex index="1">Preacher->show;Preacher->list</numIndex>
                                    </numIndex>
                                    <numIndex index="5">
                                        <numIndex index="0">Prediger (Admin)</numIndex>
                                        <numIndex index="1">Preacher->admin;Preacher->list;Preacher->show;Preacher->edit;Preacher->update;Sermon->edit;Sermon->update</numIndex>
                                    </numIndex>
                                    <numIndex index="6">
                                        <numIndex index="0">Audio Upload</numIndex>
                                        <numIndex index="1">Sermon->audioUploadWelcome;Sermon->audioUploadDone</numIndex>
                                    </numIndex>
                                    <numIndex index="7">
                                        <numIndex index="0">Predigerprofil </numIndex>
                                        <numIndex index="1">Preacher->edit;Preacher->update</numIndex>
                                    </numIndex>
                                    <numIndex index="8">
                                        <numIndex index="0">Predigtdaten </numIndex>
                                        <numIndex index="1">Sermon->edit;Sermon->update</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </switchableControllerActions>
                </el>
            </ROOT>
        </sDEF>
        <sViewConfig>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Vorlagenoptionen</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <view.templateRootPaths.0>
                        <TCEforms>
                            <label>Vorlagenpfad</label>
                            <config>
                                <type>input</type>
                                <size>20</size>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </view.templateRootPaths.0>				
                </el>
            </ROOT>
        </sViewConfig>
    </sheets>
</T3DataStructure>